   id              varchar(48) not null primary key,
   username        varchar(255) not null,
   actions         varchar(255) not null, 
   objectid        varchar(48),           
   objecttype      varchar(255),          
   pending         $db.BOOLEAN_SQL_TYPE_TRUE,         
   datecreated     timestamp not null
